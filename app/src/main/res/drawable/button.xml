<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/orange_coral"/>
            <corners android:radius="3dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <solid android:color="@color/pale_mint"/>
            <corners android:radius="3dip" />
            <gradient android:angle="-90" android:startColor="@color/pale_mint" android:endColor="@color/mint"/>
        </shape>
    </item>
</selector>